<div class="container">
  <h1>Moto</h1>
    <div class="wrapper mt-3 d-flex">
      <div class="col-8 d-flex map">
          <div style="width: 100%; height: 600px;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <div class="col-4 d-flex mx-4">
          <div class="card-trip-infos">
            <img src="https://images.caradisiac.com/logos/0/7/1/9/270719/S7-essai-yamaha-mt-10-mod-2022-si-differente-dans-la-difference-194977.jpg" alt="moto">
              <div class="infos">
                <h2><%= @moto.brand %></h2>
                <p><i class="fa-solid fa-motorcycle"></i> <%= @moto.model %> </p>
                <p><i class="fas fa-car-battery"></i> <%= @moto.power %> </p>
                <p><i class="fa-solid fa-road"></i></i> <%= @moto.kilometers%> km </p>
                <p><i class="fa-solid fa-house"></i> <%= @moto.address %></p>
              </div>
              <div class="button-show">
                <%= link_to "All Motos", motos_path, class:"btn btn-flat mx-4 mb-3" %>
              </div>
          </div>
        </div>
      </div>
    </div>
</div>
